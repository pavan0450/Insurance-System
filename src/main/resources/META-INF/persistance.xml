<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
     <persistence-unit name="insurance-system">
     	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
     	<properties>
     		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
     		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/example-db1"></property>
     		<property name="javax.persistence.jdbc.user" value="root"></property>
     		<property name="javax.persistence.jdbc.password" value="root"></property>
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"></property>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"></property>
			<property name="hibernate.show_sql" value="true"></property>
			<property name="hibernate.format_sql" value="true"></property>
     	</properties>
     </persistence-unit>
</persistence>